<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:background="#ff000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.84"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:weightSum="1">

        <HorizontalScrollView
            android:id="@+id/inputScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fillViewport="false">

            <TextView
                android:id="@+id/input_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textColor="#ff03ccb5"
                android:textSize="32sp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/output_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textColor="#ff03ccb5"
            android:textSize="50sp"
            android:layout_weight="0.48" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonMAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/memory_button"
            android:text="@string/m_plus"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonMSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/memory_button"
            android:text="@string/m_minus"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonMReg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/memory_button"
            android:text="@string/m_r"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonMClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/memory_button"
            android:text="@string/m_c"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clear_button"
            android:text="@string/c"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operation_button"
            android:text="@string/percent"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operation_button"
            android:text="@string/divide"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonErase"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/erase"
            android:background="@drawable/clear_button"
            android:textSize="22sp"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/button7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/seven"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button8"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/eight"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button9"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nine"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operation_button_big"
            android:text="@string/multiply"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/four"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/five"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button6"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/six"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operation_button_big"
            android:text="@string/minus"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/one"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/two"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/three"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operation_button_big"
            android:text="@string/plus"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/brackets"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/brackets"
            android:background="@drawable/number_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button"
            android:text="@string/zero"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button"
            android:text="@string/dot"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/equals"
            android:background="@drawable/equals_button"
            android:textSize="30sp"
            android:textColor="#ffffffff" />

    </LinearLayout>
</LinearLayout>
